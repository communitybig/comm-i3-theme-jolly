# Contributor: Leonardo Berbert <leo4berbert@gmail.com>

pkgname=comm-i3-theme-jolly
pkgdesc="Shades of Purple GTK Theme for i3wm"
pkgver=$(date +%y.%m.%d)
pkgrel=$(date +%H%M)
arch=('any')
url="https://github.com/communitybig/${pkgname}"
license=('MIT')
source=(
    "Shades-of-purple-standard-buttons.tar.xz"
)
sha256sums=('SKIP')
install="pkgbuild.install"

package() {
    cd "$srcdir"

    # Create destination directories
    mkdir -p "${pkgdir}/usr/share/themes"

    # Extract the theme with the correct compression tool (xz)
    tar -xf "Shades-of-purple-standard-buttons.tar.xz"
    
    # Renomear para garantir consistência (opcional, mas recomendado)
    mv "Shades-of-purple-standard-buttons" "Shades-of-Purple"
    
    # Copiar para o diretório correto
    cp -r "Shades-of-Purple" "${pkgdir}/usr/share/themes/"
}
